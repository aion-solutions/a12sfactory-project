{
    "name": "aion-solutions/a12sfactory-project",
    "description": "Project template for A12S Factory (Drupal 8) projects with composer",
    "type": "project",
    "license": "proprietary",
    "authors": [
        {
            "name": "AÃ¯on Solutions",
            "homepage": "https://www.aion-solutions.lu",
            "role": "Maintainer"
        }
    ],
    "repositories": {
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        "assets": {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    },
    "require": {
        "aion-solutions/a12sfactory": "^1.0.0-rc5",
        "composer/installers": "~1.6.0",
        "cweagans/composer-patches": "^1.6",
        "drupal/console": "^1.3.1",
        "drush/drush": "^9.0 || ^10.0",
        "webflo/drupal-finder": "^1.0.0",
        "webmozart/path-util": "^2.3",
        "wikimedia/composer-merge-plugin": "^1.4"
    },
    "require-dev": {
        "drupal/core-dev": "^8.9.1",
        "drupal/core-composer-scaffold": "^9.0"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "component-dir": "/tmp",
        "sort-packages": true
    },
    "extra": {
        "composer-exit-on-patch-failure": true,
        "installer-types": [
            "npm-asset",
            "bower-asset"
        ],
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/easing/": ["npm-asset/jquery.easing"],
            "web/libraries/{$name}": [
                "type:bower-asset",
                "type:npm-asset",
                "type:drupal-library"
            ],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/contrib/{$name}": ["type:drupal-drush"]
        },
        "enable-patching": true,
        "patchLevel": {
            "drupal/core": "-p2"
        },
        "merge-plugin": {
            "include": [
                "web/modules/contrib/countup/composer.asset-packagist.json",
                "web/modules/contrib/webform/composer.libraries.json"
            ]
        },
        "drupal-scaffold": {
            "allowed-packages": [
                "aion-solutions/a12sfactory",
                "drupal/core"
            ],
            "gitignore": false,
            "locations": {
                "web-root": "web/"
            },
            "file-mapping": {
                "[web-root]/robots.txt": {
                    "append": "config/default/robots-additions.txt"
                }
            }
        }
    }
}
